{
    "name": "softcomtecnologia/laravel-toast",
    "description": "Simple toast messages for Laravel 12.",
    "homepage": "https://github.com/Grimthorr/laravel-toast",
    "license": "MIT",
    "authors": [
        {
            "name": "Grimthorr",
            "email": "phil@hughesbox.co.uk",
            "homepage": "http://hughesbox.co.uk"
        }
    ],
    "require": {
        "php": ">=8.2",
        "illuminate/support": "^12.0",
        "illuminate/config": "^12.0",
        "illuminate/database": "^12.0"
    },
    "autoload": {
        "psr-4": {
            "Grimthorr\\LaravelToast\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "minimum-stability": "stable",
    "extra": {
        "laravel": {
            "providers": [
                "Grimthorr\\LaravelToast\\ServiceProvider"
            ],
            "aliases": {
                "Toast": "Grimthorr\\LaravelToast\\Facade"
            }
        }
    }
}
